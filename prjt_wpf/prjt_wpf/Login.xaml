<Window x:Class="prjt_wpf.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prjt_wpf"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Margin="0,0,4.6,0">
        <Border Background="Brown" CornerRadius="20" Margin="20">
            <StackPanel Margin="20">
                <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
                <Separator></Separator>
                <Label Content="Username" Foreground="White"/>
                <TextBox Name="txtUsername" Background="White" Foreground="Black" FontSize="18"/>
                <Label Content="Password" Foreground="White"/>
                <PasswordBox Name="txtPassword" Background="White" Foreground="Black" FontSize="18" />
                <Button Name="btnSubmit" Click="BtnSubmit_Click"  Content="Submit" Margin="80 40" Background="Black" Foreground="White" FontSize="18"/>
                <Label  Name="msg" Content="" Foreground="White" Margin="150 1" FontSize="18"/>


            </StackPanel>
        </Border>

    </Grid>
</Window>
